<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Professional Light Theme -->
    <style name="Theme.Tolkflip" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary Brand Color -->
        <item name="colorPrimary">@color/primary_600</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary Color -->
        <item name="colorSecondary">@color/secondary_600</item>
        <item name="colorSecondaryVariant">@color/secondary_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/bg_secondary</item>
        <item name="colorSurface">@color/bg_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/primary_600</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/bg_primary</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Error -->
        <item name="colorError">@color/error</item>

        <!-- Shape -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Tolkflip.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Tolkflip.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Tolkflip.LargeComponent</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.Tolkflip.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/primary_600</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <!-- Shape Styles -->
    <style name="ShapeAppearance.Tolkflip.SmallComponent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.Tolkflip.MediumComponent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.Tolkflip.LargeComponent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.Tolkflip.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="backgroundTint">@color/primary_600</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.Tolkflip.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/bg_primary</item>
    </style>

    <!-- Text Input Style -->
    <style name="Widget.Tolkflip.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/primary_600</item>
        <item name="hintTextColor">@color/text_secondary</item>
    </style>
</resources>
